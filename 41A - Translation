#include<bits/stdc++.h>
using namespace std;
int main()
{
    string s,t,temp;
    cin>>s;
    cin>>t;
    temp=s;
    int ss=s.size();

    for(int i=ss-1;i>=0;i--)
    {
        temp[ss-1-i]=s[i];
    }
    if(temp==t)
    {
        cout<<"YES"<<endl;
    }
    else
    {
        cout<<"NO"<<endl;
    }

}
