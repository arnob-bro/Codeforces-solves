#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        string s;
        cin>>s;
        //int ss = sizeof(s)/sizeof(char);
        int i=0,countt=0;
        while(s[i]!= NULL)
        {
            countt++;
            i++;
        }

        if(countt>10)
        {
            cout<<s[0]<<countt-2<<s[i-1]<<endl;
        }
        else
        {
            cout<<s<<endl;
        }

    }
}
