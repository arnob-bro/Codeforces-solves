#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,k;
    cin>>n>>k;
    vector<int> v,vv;
    for(int i=0;i<n;i++)
    {
        int score;
        cin>>score;
        v.push_back(score);
    }
    for(int i=0;i<n;i++)
    {
        if(v[i]>=v[k-1] && v[i]> 0)
        {
            vv.push_back(v[i]);
        }
    }
    cout<<vv.size()<<endl;

}
